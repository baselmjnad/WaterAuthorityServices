<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MyInvoices">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvInvoicesBarcode"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/twotone_qr_code_24"
                android:drawablePadding="10dp"
                android:text="Barcode"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvInvoicesTotal"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/baseline_currency_exchange_24"
                android:drawablePadding="10dp"
                android:text=""
                android:textColor="@color/Red"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvIncoiceError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/Red"
                android:textSize="14dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ListView
        android:id="@+id/lvInvoices"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>