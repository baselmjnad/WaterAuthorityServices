<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RequestsStatus">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">


            <TextView
                android:id="@+id/tvMyReqConsumerName"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/twotone_person_24"
                android:drawablePadding="10dp"
                android:text="Full Name"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvMyReqPhone"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/twotone_phone_android_24"
                android:drawablePadding="10dp"
                android:text="Phone number"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvMyReqAddress"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:drawableLeft="@drawable/twotone_location_on_24"
                android:drawablePadding="10dp"
                android:text="Address"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/tvRequestError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/Red"
                android:textSize="14dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ListView
        android:id="@+id/lvRequests"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>



